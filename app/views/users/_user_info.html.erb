<div class="col-md-3">

  <h2>User info</h2>

  <% if current_page?('/users') or current_page?('/books') %>
    <%= image_tag current_user.get_profile_image(100,100) %>
  <% elsif current_page?(user_path(user.id)) %>
    <%= image_tag user.get_profile_image(100,100) %>
  <% else %>
    <%= image_tag book.user.get_profile_image(100,100) %>
  <% end %>

  <table class="table">
    <tbody>
      <tr>
      </tr>
      <tr>
        <th>name</th>
        <th>
          <% if current_page?('/users') or current_page?('/books') %>
            <%= current_user.name %>
          <% elsif current_page?(user_path(user.id)) %>
            <%= user.name %>
          <% else %>
            <%= book.user.name %>
          <% end %>
        </th>
      </tr>
      <tr>
        <th>introduction</th>
        <th>
          <% if current_page?('/users') or current_page?('/books') %>
            <%= current_user.introduction %>
          <% elsif current_page?(user_path(user.id)) %>
            <%= user.introduction %>
          <% else %>
            <%= book.user.introduction %>
          <% end %>
        </th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <!--ログインユーザーの投稿の投稿詳細画面からでも編集に飛ぶようにしたい-->
    <% if current_page?('/users') or current_page?('/books') or current_page?(user_path(current_user.id)) %>
      <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do%>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <% else %>
      <%= link_to user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do%>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>

  <%= form_with model: newbook do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label><br />
      <%= f.text_field :title ,class:"form-control book_title" %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label><br />
      <%= f.text_area :body ,class:"form-control book_body" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
    </div>
  <% end %>

</div>